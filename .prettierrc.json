{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "bracketSpacing" : false,
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "semi": true,
        "tabWidth": 2,
        "parser": "scss"
      }
    },
    {
      "files": "*.html",
      "options": {
        "semi": true,
        "tabWidth": 2,
        "parser": "html"
      }
    },
    { 
      "files": "*.js",
      "options": {
        "semi": true,
        "tabWidth": 4
      }
    },
    {
      "files": "*.php",
      "options": {
        "semi": true,
        "tabWidth": 2
      }
    },
    {
      "files": "*.blade.php",
      "options": {
        "semi": true,
        "tabWidth": 2
      }
    }
  ]
}